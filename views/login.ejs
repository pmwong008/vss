    <form id="login" class="textForm flexCenter" action="/auth/login" method="post">
        <label for="username">Username</label>
        <input
          id="username"
          type="text"
          name="username"
          autocomplete="username"
          required
        ><br>
        <label for="password">Password</label>
        <input
          id="password"
          type="password"
          name="password"
          autocomplete="current-password"
          required
        ><br><br>
      
        <button type="submit" class="button-primary">Sign In</button>
      </form>



